<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
    <strong>Desc:</strong>
    <%= @movie.desc %>
</p>

<p>
    <img src="<%=@movie.photo_url%>" width="100">
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %>
<%= link_to 'Back', movies_path %>



<%= form_tag("/movies/#{@movie.id}/reviews", method: :get) do %>
<p>
    <strong>Ratings:</strong>
	1   <%=radio_button_tag(:rating,"1") %>
    2 	<%=radio_button_tag(:rating,"2") %>
    3 	<%=radio_button_tag(:rating,"3") %>
    4 	<%=radio_button_tag(:rating,"4") %>
    5 	<%=radio_button_tag(:rating,"5") %>
</p>
	<%=text_field_tag(:comment) %>
	<%=submit_tag("Submit")%>
<% end %>

 <% @movie.reviews.each do |review| %>
 <p> 
 	User : <%=review.user_id%>
 	Ratings: <%=review.rating%>
 	Comment: <%=review.comment%>
 </p>
 <% end %>

 	Rating Avg : <%=@avg%>
