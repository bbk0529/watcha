    <main role="main">
      <div class="album text-muted">
        <div class="container">
          <div class="row">
          <% @movies.each do |movie| %>
               <div class="card col-2" style="width: 15rem;">
                <a href="/movies/<%=movie.id%>">
                  <img class="card-img-top" src="<%=movie.photo_url%>" alt="Card image cap">
                </a>

                <div class="card-body">
                  <p class="card-text"><h5><%= movie.title %></h5></p>
                  <%= movie.reviews.first.comment unless movie.reviews.first.nil? %><br/>
                  <%= link_to 'Show', movie %>
                  <% if current_user.admin? || current_user.id == movie.user_id %>
                  <%= link_to 'Edit', edit_movie_path(movie) %>
                  <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
                </div>
              </div>
          <% end %>
          </div>
      </div>
    </div>

    </main>
    <%= link_to 'New Movie', new_movie_path %>